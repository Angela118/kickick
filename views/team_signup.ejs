                    <option value="" disabled selected hidden>Choose...</option>

                    <option>10대</option>

                    <option>20대</option>

                    <option>30대</option>

                    <option>40대</option>

                    <option>50대</option>

                    <option>60대</option>

                    <option>70대 이상</option>

                </select>

            </div>

 

 

            <div class="mb-3">

