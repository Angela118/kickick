                    <!--<option value="">Choose...</option>-->
                    <!--<option>여</option>-->
                    <!--<option>남</option>-->
                <!--</select>-->
            </div>
		
		 	<div class="mb-3">
                <label for="">평균 연령</label>
				<div class="change"><p><%= age %></p></div>
              <!--<select class="custom-select d-block w-100" name="age" id="" required>
                    <option>10대</option>
                    <option>20대</option>
                    <option>30대</option>
                    <option>40대</option>
                    <option>50대</option>
                    <option>60대</option>
                    <option>70대 이상</option>
                </select>-->
            </div>

		
            <div class="mb-3">
                <label for="region">주 경기 장소</label>
				<div class="change"><p><%= region %></p></div>
                <!--<input type="text" class="form-control" id="region" placeholder="서울시 용산구 청파동" required>-->
            </div>
	
	
	
			<div class="mb-3">
                <label for="">원정 가능 유무</label>
				<div class="change"><p><%= move %></p></div>
                <!--<select class="custom-select d-block w-100" name="move" id="" required>
                    <option>O</option>
                    <option>X</option>
                </select>-->
            </div>
	
	
	
			<div class="mb-3">
                <label for="">팀원 수</label>
				<div class="change"><p><%= nofteam %> 명</p></div>
            </div>
	
	
	
			<div class="mb-3">
                <label for="">경기 경력</label>
                <div class="change"><p><%= career_year %> 년</p></div>
            </div>
		
		
			<div class="mb-3">
                <label for="">여태까지 경기 횟수</label>
                <div class="change"><p><%= career_count %> 번</p></div>
            </div>
	
		
			<div class="mb-3">
                <label for="">팀 소개글</label>
                <div class="change"><p><%= introteam %></p></div>
            </div>
	
	

