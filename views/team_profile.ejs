            <p>프로필 사진 등록</p> <!--프로필 사진-->
            <div class="profile_img_upload">
                <div class="img_div mb-1"><img id="profile_img" src="../img/profile_basic.png"/></div>
            </div>

            <div class="mb-3">
                <label for="user-name">팀 이름</label>
				<div class="change"><p><%= teamname %></p></div>
				<!--이름-->
                <!--<input type="text" class="form-control" id="user-name" placeholder="" value="" required>-->
                <!--<div class="invalid-feedback">-->
                    <!--Valid name is required.-->
                <!--</div>-->
            </div>

            <div class="mb-3"> <!--아이디-->
                <label for="user-ID">팀장 이메일</label>
				<div class="change"><p><%= email %></p></div>
				
                <!--<div class="input-group">-->
                    <!--<input type="text" class="form-control" id="user-ID" placeholder="" required>-->
                    <!--<div class="invalid-feedback" style="width: 100%;">-->
                        <!--Your ID is required.-->
                    <!--</div>-->
                <!--</div>-->
            </div>
		
			<div class="mb-3">
