            <div class="mb-3">
                <label>이메일 인증(변경)</label>
                <div style="display: flex">
                    <input type="email" class="form-control" placeholder="" required>
                    <div class="btn">인증</div>
                </div>

            </div>



            <div class="mb-3">
                <label for="serurity-char">보안문자</label>
                <input type="text" class="form-control" id="serurity-char" placeholder="" required>
            </div>
-->
            <hr class="mb-4">
			<a href="/profileeditok"><button class="btn btn-block" type="submit">회원정보 수정 완료</button></a>
        </form>
    </div>
</div>

<footer class="my-5 pt-5 text-muted text-center text-small">

</footer>

</body>

<script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#profile_img').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#new_profile_img").change(function() {
        readURL(this);
    });
</script>
</html>
