<body class="whiteB">
	
	
<script type="text/javascript">
    function goBack(){
        window.history.back();
    }
</script>

<nav class="navbar blueB">
    <div style="display: flex; justify-content: space-between; align-items: center;  margin-left:1rem; margin-right:1rem;">
        <img src="../img/left-arrow.png" alt="" width="20rem" height="20rem" style="margin-right:3rem;" onclick="goBack();">
        <p class="logo">회원 정보 수정</p>
    </div>
</nav>
    
<div class="container">
    <div class="reco">
        <h5 class="mb-3" style="font-weight: bold;">기본 정보</h5>
        <form class="needs-validation" novalidate>

            <p class="mb-3">
            <p>프로필 사진 등록</p> <!--프로필 사진-->
            <div class="profile_img_upload">
                <div class="img_div mb-1"><img id="profile_img" src="../img/profile_basic.png"/></div>
                <div class="filebox"> <label for="new_profile_img">업로드</label> <input type="file" id="new_profile_img"> </div>
            </div>



            <div class="mb-3"> <!--아이디-->
                <label for="user-ID">팀장 이메일</label>
				<div class="change" type="email" name="email" id=email><p> <%= email %></p></div>
                <!--<div class="input-group">
                    <input type="text" class="form-control" id="user-ID" placeholder="" required>
                    <div class="invalid-feedback" style="width: 100%;">
                        Your ID is required.
                    </div>
                </div>-->
            </div>
			
			<div class="mb-3">
                <label for="user-name">팀 이름</label> <!--이름-->
                <input type="text" class="form-control" name="teamname" id="user-name" placeholder="<%= teamname %>" value="" required>
                <div class="invalid-feedback">
                    Valid name is required.
                </div>
            </div>
			

            <div class="mb-3">
                <label for="user-gender">성별</label>
                <select class="custom-select d-block w-100" name="gender" id="user-gender" required>
                    <option>무관</option>
                    <option>여</option>
                    <option>남</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="">평균 연령</label>
                <select class="custom-select d-block w-100" name="age" id="age" required>
					<option value="">Choose...</option>
                    <option>10대</option>
                    <option>20대</option>
                    <option>30대</option>
                    <option>40대</option>
                    <option>50대</option>
                    <option>60대</option>
                    <option>70대 이상</option>
                </select>
            </div>


            <div class="mb-3">
                <label for="region">주 경기 장소</label>
                <input type="text" class="form-control" name="region" id="region" placeholder=<%= region %> required>
            </div>

            <div class="mb-3">
                <label for="">원정 가능 유무</label>
                <select class="custom-select d-block w-100" name="move" id="move" required>
					<option value="">Choose...</option>
                    <option>가능</option>
                    <option>불가능</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="">팀원 수(숫자만 입력)</label>
                <input type="text" class="form-control" name="nofteam" id="nofteam" placeholder="<%= nofteam %>"onkeydown='return onlyNumber(event)' onkeyup='removeChar(event)' style='ime-mode:disabled;' required>
				<span>명&nbsp</span>
            </div>

            <div class="mb-3">
                <label for="">경기 경력</label>
                <input type="text" class="form-control" name="career_year" id="career_year" placeholder="<%= career_year %>" onkeydown='return onlyNumber(event)' onkeyup='removeChar(event)' style='ime-mode:disabled;' required>
				<span>년&nbsp</span>
            </div>

            <div class="mb-3">
                <label for="">여태까지 경기 횟수</label>
				<span>약&nbsp</span>
                <input type="text" class="form-control" name="career_count" id="career_count" placeholder="<%= career_count %>" onkeydown='return onlyNumber(event)' onkeyup='removeChar(event)' style='ime-mode:disabled;' required>
				<span>번&nbsp</span>
            </div>

            <div class="mb-3">
                <label for="">팀 소개글</label>
                <textarea class="form-control" name="introteam" rows="5" placeholder="100자 내로 입력"><%= introteam %></textarea>
            </div>

			
			
